{
  "name": "solidity-next-js-starter-contracts",
  "version": "2.1.0",
  "description": "A basic contract for starting to build full stack Ethereum dApps",
  "main": "index.js",
  "author": "Tom Hirst <hello@tomhirst.com>",
  "license": "MIT",
  "scripts": {
    "start": "hardhat node",
    "test": "hardhat test",
    "deploy": "hardhat run --network localhost scripts/deploy.ts",
    "deploy:sepolia": "hardhat run --network sepolia scripts/deploy.ts",
    "deploy:MarriageNFTImplementation:localhost": "hardhat run --network localhost scripts/deploy_MarriageNFTImplementation.ts",
    "deploy:MarriageNFTImplementation:sepolia": "hardhat run --network sepolia scripts/deploy_MarriageNFTImplementation.ts",
    "deploy:MarriageAndDivorce:localhost": "hardhat run --network localhost scripts/deploy_MarriageAndDivorce.ts",
    "deploy:MarriageAndDivorce:sepolia": "hardhat run --network sepolia scripts/deploy_MarriageAndDivorce.ts",
    "verify:sepolia": "hardhat verify --network sepolia",
    "format": "prettier --write \"./contracts/**/*.sol\" --plugin prettier-plugin-solidity && prettier --write \"./**/*.ts\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.8",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.3",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "dotenv": "^16.3.1",
    "solc": "^0.8.26"
  }
}
